#include <stdio.h>

int main(void) {
    char str[100];
    char rev[100];
    int  i;

    printf("Enter a string: ");
    fflush(stdout);
    gets(str);
    printf("the orignal text: %s ",str);
    int len;
    for (i = 0; str[i] != '\0'; i++)
    {
    	len++;
    }
    for (i = 0; str[i] != '\0'; i++)
    {
        rev[len-i-1]=str[i];
    }
    printf("the reversed text: %s ",rev);
    return 0;
}
