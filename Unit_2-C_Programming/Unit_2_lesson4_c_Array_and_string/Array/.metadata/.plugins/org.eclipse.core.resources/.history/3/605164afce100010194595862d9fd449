#include <stdio.h>
int main(void)
{
	float arr[2][2];
	int i,j,n,m;
	printf("Enter row and colums of array:\n");
	fflush(stdout);
	scanf("%d %d",&n,&m);
	printf("Enter elements of array:\n");
	for(i=0;i<n;i++)
	{
		for(j=0;j<m;j++)
		{
			printf("Enter arr[%d][%d]:",i,j);
			fflush(stdout);
			scanf("%f",&arr[i][j]);
		}
	}
	printf("The matrix is:\n");
	for(i=0;i<n;i++)
	{
		for(j=0;j<m;j++)
		{
			printf("%f ",arr[i][j]);
		}
		printf("\n");
	}

	return 0;
}
