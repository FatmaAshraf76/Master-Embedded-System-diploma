#include <stdio.h>
int main(void)
{
	char c;
	float x,y;
	printf("Enter operation either + or - or * or divide :");
	fflush(stdout);
	scanf("%c",&c);
	printf("Enter two operands : ")
	fflush(stdout);
	scanf("%f %f",&x,&y);
	switch(c)
	{
	case '+':
		printf("%f + %f = %f",x,y,x+y);
		break;
	case '-':
		printf("%f - %f = %f",x,y,x-y);
		break;
	case '*':
		printf("%f * %f = %f",x,y,x*y);
		break;
	case '/':
		printf("%f / %f = %f",x,y,x/y);
		break;
	}

	return 0;
}
