#include <stdio.h>
int main(void)
{
	int factorial=1 ,x;
	printf("Enter an integer:");
	fflush(stdout);
	scanf("%d",&x);
	if(x<0)
	{
		printf("Error!!! Factorial of negative number doesn't exist");
	}
	else if (x==0)
	{
		printf("Factorial = 1");
	}
	else
	{
		for(int i=1;i<=x;i++)
		{
			factorial*=i;
		}
		printf("Factorial = %d",factorial);
	}
	return 0;
}
