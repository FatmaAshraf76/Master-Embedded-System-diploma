#include <stdio.h>
struct information
{
	char name[50];
	int roll;
	float marks;
};
int main(void)
{
	struct information s1;
	printf("Enter information of students:\n");
	printf("Enter name: ");
	fflush(stdout);
	scanf("%s",&s1.name);
	fflush(stdout);
	printf("Enter roll number: ");
	fflush(stdout);
	scanf("%d",&s1.roll);
	fflush(stdout);
	printf("Enter marks: ");
	fflush(stdout);
	scanf("%f",&s1.marks);
	fflush(stdout);
	printf("Displaying information\n ");
	printf("name: %s \n",s1.name);
	printf("name: %d \n",s1.roll);
	printf("name: %f \n",s1.marks);
	return 0;
}
